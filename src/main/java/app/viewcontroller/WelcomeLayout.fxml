<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.viewcontroller.WelcomeLayoutController">
   <children>
      <TextFlow prefHeight="200.0" prefWidth="200.0" textAlignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To Loot Tracker" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Text>
         </children>
      </TextFlow>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button defaultButton="true" mnemonicParsing="false" onAction="#handleCreateNewRecord" text="Create New Record" textAlignment="CENTER" translateX="-200.0" />
            <Button mnemonicParsing="false" onAction="#handleLoadRecord" text="Load Record" textAlignment="CENTER" translateX="-150.0" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
